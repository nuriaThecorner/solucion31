@model _04_Data.Datos.Discografica

@{
    ViewBag.Title = "Delete";
}
<!-- Header Start -->
<div class="jumbotron jumbotron-fluid mb-5">
    <div class="container text-center py-5">
        <h1 class="text-white display-3">Borrar discográfica</h1>
        <div class="d-inline-flex align-items-center text-white">
            <p class="m-0"><a class="text-white" href="">Inicio</a></p>
            <i class="fa fa-circle px-3"></i>
            <p class="m-0">Borrar discográfica</p>
        </div>
    </div>
</div>
<!-- Header End -->


<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">

            <h3>¿Estás seguro/a que quieres borrar esta discográfica? </h3>
             <hr />

            <div class="col-lg-5 pb-4 pb-lg-0">

                @*@Html.DisplayNameFor(model => model.imagen)*@
                <img class="img-fluid w-100" src="@Html.DisplayFor(model => model.imagen)" alt="discografica">


            </div>

            <div class="col-lg-7">

                @Html.DisplayNameFor(model => model.nombre):

                <h1 class="mb-4">@Html.DisplayFor(model => model.nombre)</h1>
            </div>



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Borrar" class="btn btn-default btn btn-primary py-2 px-4 my-2" /> |
                    @Html.ActionLink("Volver a la lista", "Index")
                </div>
            }
        </div>
    </div>
</div> 