@*@model _04_Data.Datos.Disco*@
    @model _04_Data.ViewModels.CategoriasAutoresDiscograficasDiscosViewModel

@{
    ViewBag.Title = "Create";
}

<!-- Header Start -->
<div class="jumbotron jumbotron-fluid mb-5">
    <div class="container text-center py-5">
        <h1 class="text-white display-3">Añadir Disco</h1>
        <div class="d-inline-flex align-items-center text-white">
            <p class="m-0"><a class="text-white" href="">Incio</a></p>
            <i class="fa fa-circle px-3"></i>
            <p class="m-0">Añadir Disco</p>
        </div>
    </div>
</div>
<!-- Header End -->

<div class="container-fluid py-5">
    <div class="container">



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Añadir disco</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.discos.id_discografia, "discografica", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.DropDownList("id_discografia", null, htmlAttributes: new { @class = "form-control" })*@
                        @Html.DropDownListFor(model => model.discos.id_discografia, new SelectList(Model.discograficas, "id", "nombre", Model.discos.id_discografia), "- Seleccionar -", new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.discos.id_discografia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.discos.id_autor, "autor", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.DropDownList("id_autor", null, htmlAttributes: new { @class = "form-control" })*@
                        @Html.DropDownListFor(model => model.discos.id_autor, new SelectList(Model.autores, "id", "nombre", Model.discos.id_autor), "- Seleccionar -", new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.discos.id_autor, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.discos.id_categoria, "categoria", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.DropDownList("id_categoria", null, htmlAttributes: new { @class = "form-control" })*@
                        @Html.DropDownListFor(model => model.discos.id_categoria, new SelectList(Model.categorias, "id", "nombre", Model.discos.id_categoria), "- Seleccionar -", new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.discos.id_categoria, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.discos.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.discos.nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.discos.nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.discos.imagen, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.discos.imagen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.discos.imagen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Crear" class="btn btn-primary py-2 px-4 my-2" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Volver a la lista", "Index")
        </div>


    </div>


</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
